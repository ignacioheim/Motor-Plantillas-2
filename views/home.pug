extends header.pug 

block content


    h1="Ingrese Producto"

        form(action="guardar" method="POST")    

            div(class="form-group")
            label="Nombre"
            input(
                type='text'
                name='title'
                class="form-control"
                required
            )

            label="Precio"
            input(
                type='number'
                name='price'
                class="form-control"
                required
            )
            
            label="Foto URL"
            input(
                type='text'
                name='thumbnail'
                class="form-control"
                required
            )
            button(type='submit' class="btn btn-primary") Enviar
	
    include footer
 




